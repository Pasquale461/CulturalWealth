<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/Save"
    android:layout_height="match_parent" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingEnd="2dp">


        <TextView
            android:id="@+id/textViewPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero di giocatori: 4"
            android:textColor="@color/Cocoa_brown"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Data di creazione: 2023-08-24"
            android:textColor="@color/Air_Force_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewTurns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Numero di turni: 10"
            android:textColor="@color/Air_Force_blue"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>