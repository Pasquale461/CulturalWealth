<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Save"
    app:cardBackgroundColor="@color/ming"
    app:cardCornerRadius="20dp">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingEnd="2dp"
        android:gravity="center">


        <TextView
            android:id="@+id/textViewPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero di giocatori: 4"
            android:textColor="@color/new_orleans"
            android:textSize="18sp"
            android:gravity="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Data di creazione: 2023-08-24"
            android:textColor="@color/Cocoa_brown"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewTurns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Numero di turni: 10"
            android:textColor="@color/Cocoa_brown"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>