<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Customize dialog attributes here -->
        <item name="android:background">@drawable/allertbg</item>
        <item name="cornerRadius">20dp</item>
        <item name="colorAccent">@color/pink_rose</item>
        <!-- Add more attributes as needed -->
    </style>


</resources>